# Nexus Starter Environment Configuration
# Copy this file to .env.local and fill in your values

# Stellar Network Configuration
NEXT_PUBLIC_STELLAR_NETWORK=testnet
NEXT_PUBLIC_STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
NEXT_PUBLIC_STELLAR_SOROBAN_URL=https://soroban-testnet.stellar.org

# For Mainnet (change when ready for production)
# NEXT_PUBLIC_STELLAR_NETWORK=mainnet
# NEXT_PUBLIC_STELLAR_HORIZON_URL=https://horizon.stellar.org
# NEXT_PUBLIC_STELLAR_SOROBAN_URL=https://soroban.stellar.org

# Platform Configuration
NEXT_PUBLIC_PLATFORM_NAME=Nexus Starter
NEXT_PUBLIC_PLATFORM_FEE=0.025
NEXT_PUBLIC_PLATFORM_DESCRIPTION=Trustless Work on Stellar

# Optional: Analytics and Monitoring
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Optional: Feature Flags
# NEXT_PUBLIC_ENABLE_TESTNET=true
# NEXT_PUBLIC_ENABLE_MAINNET=false
# NEXT_PUBLIC_ENABLE_ADVANCED_FEATURES=false
